pipeline { 
agent any
    stages {
        stage('Clone Git') {
            steps {
                echo 'Cloning repo...'
                checkout([
                    $class: 'GitSCM', 
                    branches: [[name: '*/main']], 
                    extensions: [], 
                    userRemoteConfigs: [[url: 'https://github.com/RachnaKedigehalli/Jenkins-demo.git']]
                ])
            }
        }
        stage('Build Code') {
            steps {
                echo 'Building...'
                git branch: 'main', url: 'https://github.com/RachnaKedigehalli/Jenkins-demo.git'
                sh "chmod u+x functions.py"
                sh "./functions.py"
            }
        }
     stage('Test Code') {
            steps {
                echo 'Testing...'
                git branch: 'main', url: 'https://github.com/RachnaKedigehalli/Jenkins-demo.git'
                sh "chmod u+x testing.py"
                sh "./testing.py"
            }
        }
    }

    post {
        always {
             echo 'Sending Email..'
            
             emailext body: "${currentBuild.currentResult}: Job ${env.JOB_NAME} build ${env.BUILD_NUMBER}\n More info at: ${env.BUILD_URL}",
                 recipientProviders: [[$class: 'DevelopersRecipientProvider'], [$class: 'RequesterRecipientProvider']],
                 subject: "Jenkins Build ${currentBuild.currentResult}: Job ${env.JOB_NAME}",
                 to: 'rsss30102411@gmail.com'
            
             echo 'Email Sent.'
         }
    }
}